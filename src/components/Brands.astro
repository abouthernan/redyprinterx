---
const partners = [
  '/partners/2.png',
  '/partners/3.svg',
  '/partners/4.webp',
  '/partners/5.jpg',
  '/partners/6.jpeg'
]
---

<section
  class="flex z-[2] px-4 flex-wrap container mx-auto justify-center items-center bg-white py-10 rounded-t-3xl -mt-5 overflow-hidden animate-in slide-in-from-bottom-6 duration-1000"
>
  <div
    class="items-start flex animate-loop-scroll-mobile md:animate-loop-scroll space-x-10 md:space-x-20 mx-auto"
  >
    {
      partners.map(item => (
        <img
          loading="lazy"
          src={item}
          class="aspect-video flex-shrink-0 object-contain object-center w-36 md:w-[236px] overflow-hidden self-center max-w-full my-auto animate-in fade-in-0 duration-1000"
          alt="logo"
        />
      ))
    }
    {
      partners.map(item => (
        <img
          loading="lazy"
          src={item}
          class="aspect-video flex-shrink-0 object-contain object-center w-[236px] overflow-hidden self-center max-w-full my-auto animate-in fade-in-0 duration-1000"
          alt="logo"
        />
      ))
    }
  </div>
</section>
